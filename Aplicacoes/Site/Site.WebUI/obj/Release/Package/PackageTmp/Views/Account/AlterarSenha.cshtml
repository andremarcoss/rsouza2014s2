@model  Site.WebUI.Models.AlterarSenhaViewModel

@{
    Site.WebUI.Models.LoginViewModel login = (Site.WebUI.Models.LoginViewModel)Session["Login"];
    ViewBag.Title = "Alterar a Senha";
    ViewBag.Lista = string.Format("/Remessa/List/{0}", login.Usuario);
    ViewBag.AlterarSenha = "/Account/AlterarSenha";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="container">
    @using (Html.BeginForm("AlterarSenha", "Account", FormMethod.Post, new { @class = "form-signin", @role = "form" }))
    {
        @Html.ValidationSummary(true);
        
        <h2 class="form-signin-heading">Alterar a senha</h2>
        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Motorista:</label>
            </div>
            <div class="col-sm-10">
                <label class="form-control">@Model.motorista.mtNome</label>
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Nova senha:</label>
            </div>
            <div class="col-sm-10">
                @Html.PasswordFor(x => x.novaSenha, new { @class = "form-control", @placeholder = "Nova Senha" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Confirme senha:</label>
            </div>
            <div class="col-sm-10">
                @Html.PasswordFor(x => x.confirmacaoSenha, new { @class = "form-control", @placeholder = "Confirme Senha" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-0 col-sm-10">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Salvar" />
            </div>
        </div>
    }
</div>

