@model Site.WebUI.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", @role = "form" }))
    {
        @Html.ValidationSummary(true);
    
        <h2 class="form-signin-heading">Entrar no sistema</h2>
        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Login:</label>
            </div>
            <div class="col-sm-10">
                @Html.TextBoxFor(x => x.Usuario, new { @class = "form-control", @placeholder = "Login" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-10">
                <label class="col-sm-2 control-label">Senha:</label>
            </div>
            <div class="col-sm-10">
                @Html.PasswordFor(x => x.Senha, new { @class = "form-control", @placeholder = "Senha" })
            </div>
        </div>
        <div class="form-group">
            <div class="col-sm-offset-0 col-sm-10">
                <input type="submit" class="btn btn-lg btn-primary btn-block" value="Entrar" />
            </div>
        </div>
    }
</div>
